{
  "name": "transformers-router",
  "version": "1.0.0",
  "description": "Local AI infrastructure for agent frameworks - Transformers.js wrapper with LLM, TTS, STT, Web Workers, React & Vue support",
  "homepage": "https://github.com/kacperpaczos/transformers-router#readme",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js"
    },
    "./vue": {
      "types": "./dist/vue/index.d.ts",
      "import": "./dist/vue/index.js"
    },
    "./adapters": {
      "types": "./dist/adapters/index.d.ts",
      "import": "./dist/adapters/index.js"
    },
    "./models": {
      "types": "./dist/models/index.d.ts",
      "import": "./dist/models/index.js"
    },
    "./workers": {
      "types": "./dist/workers/index.d.ts",
      "import": "./dist/workers/index.js"
    },
    "./utils": {
      "types": "./dist/utils/index.d.ts",
      "import": "./dist/utils/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.unit.config.js",
    "test:unit": "jest --config jest.unit.config.js",
    "test:browser": "playwright test --config playwright.integration.config.ts",
    "test:browser:headed": "playwright test --config playwright.integration.config.ts --headed",
    "test:browser:ui": "playwright test --config playwright.integration.config.ts --ui",
    "test:e2e": "playwright test --config playwright.config.ts",
    "test:e2e:headed": "playwright test --config playwright.config.ts --headed",
    "test:all": "npm run test:unit && npm run test:browser && npm run test:e2e",
    "test:watch": "jest --config jest.unit.config.js --watch",
    "test:coverage": "jest --config jest.unit.config.js --coverage",
    "serve:e2e": "node tests/e2e/server.js",
    "serve:browser": "node tests/integration-browser/server.mjs",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/**/*.test.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/**/*.test.ts' --fix",
    "format": "prettier --write 'src/**/*.{ts,js,json,md}'",
    "format:check": "prettier --check 'src/**/*.{ts,js,json,md}'",
    "prepare": "husky"
  },
  "keywords": [
    "transformers",
    "ai",
    "agents",
    "llm",
    "speech",
    "whisper",
    "tts",
    "stt",
    "local-ai",
    "huggingface",
    "transformers.js",
    "openai-compatible",
    "agent-framework",
    "text-to-speech",
    "speech-to-text",
    "machine-learning",
    "natural-language-processing",
    "browser-ai",
    "web-ai",
    "onnx",
    "voice-profiles",
    "react",
    "vue",
    "typescript",
    "javascript"
  ],
  "author": "Kacper Paczos",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "examples"
  ],
  "peerDependencies": {
    "@huggingface/transformers": "^3.0.0"
  },
  "devDependencies": {
    "@huggingface/transformers": "^3.2.2",
    "@playwright/test": "^1.56.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.1",
    "@typescript-eslint/parser": "^8.46.1",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.4",
    "onnxruntime-common": "1.18.0",
    "onnxruntime-node": "1.18.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vue": "^3.5.22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kacperpaczos/transformers-router"
  },
  "bugs": {
    "url": "https://github.com/kacperpaczos/transformers-router/issues"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.{json,md}": [
      "prettier --write"
    ]
  }
}
