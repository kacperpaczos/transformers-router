{
  "name": "transformers-router",
  "version": "0.1.0",
  "description": "Local AI infrastructure for agent frameworks - Transformers.js wrapper with LLM, TTS, STT, Web Workers, React & Vue support",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    },
    "./react": {
      "types": "./src/react/index.ts",
      "import": "./src/react/index.ts"
    },
    "./vue": {
      "types": "./src/vue/index.ts",
      "import": "./src/vue/index.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "test": "jest --config jest.unit.config.js",
    "test:unit": "jest --config jest.unit.config.js",
    "test:integration": "playwright test --config playwright.integration.config.ts",
    "test:integration:headed": "playwright test --config playwright.integration.config.ts --headed",
    "test:integration:ui": "playwright test --config playwright.integration.config.ts --ui",
    "test:e2e": "playwright test --config playwright.config.ts",
    "test:e2e:headed": "playwright test --config playwright.config.ts --headed",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:watch": "jest --config jest.unit.config.js --watch",
    "test:coverage": "jest --config jest.unit.config.js --coverage",
    "serve:e2e": "node tests/e2e/server.js",
    "serve:browser": "node tests/integration-browser/server.mjs",
    "lint": "eslint 'src/**/*.ts' --ignore-pattern 'src/**/*.test.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --ignore-pattern 'src/**/*.test.ts' --fix",
    "prepare": "npm run build"
  },
  "keywords": [
    "transformers",
    "ai",
    "agents",
    "llm",
    "speech",
    "whisper",
    "tts",
    "stt",
    "local-ai",
    "huggingface",
    "transformers.js",
    "openai-compatible",
    "agent-framework"
  ],
  "author": "Kacper Paczos",
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "peerDependencies": {
    "@huggingface/transformers": "^3.0.0"
  },
  "devDependencies": {
    "@huggingface/transformers": "^3.2.2",
    "onnxruntime-node": "1.18.0",
    "onnxruntime-common": "1.18.0",
    "@playwright/test": "^1.56.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.7.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.0",
    "@typescript-eslint/parser": "^8.46.0",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "vue": "^3.5.22"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kacperpaczos/transformers-router"
  },
  "bugs": {
    "url": "https://github.com/kacperpaczos/transformers-router/issues"
  }
}
